{
  "name": "node-weather-agent",
  "version": "1.0.0",
  "description": "Microsoft Teams Toolkit Weather Agent Bot Template with Agetns SDK",
  "engines": {
    "node": "18 || 20 || 22"
  },
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib/src/index.js",
  "scripts": {
    "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
    "dev:teamsfx:testtool": "env-cmd --silent -f .localConfigs.testTool npm run dev",
    "dev:teamsfx:launch-testtool": "env-cmd --silent -f env/.env.testtool teamsapptester start",
    "dev": "nodemon --exec node --inspect=9239 --signal SIGINT -r ts-node/register ./src/index.ts",
    "build": "tsc --build && shx cp -r ./src/prompts ./lib/src",
    "start": "node ./lib/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --exec \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "dependencies": {
    "@langchain/community": "^0.3.40",
    "@langchain/core": "^0.3.47",
    "@langchain/langgraph": "^0.2.66",
    "@langchain/langgraph-checkpoint-postgres": "^0.0.4",
    "@langchain/openai": "^0.5.6",
    "@microsoft/agents-hosting": "^0.1.49",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "botbuilder": "^4.23.1",
    "express": "^5.0.1",
    "openai": "^4.95.1"
  },
  "devDependencies": {
    "@microsoft/teams-app-test-tool": "^0.2.6",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.25.0",
    "esrun": "^3.2.26",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
