{
  "name": "large-scale-notification",
  "version": "1.0.0",
  "description": "Microsoft Microsoft 365 Agents Toolkit Large Scale Notification Bot Sample",
  "engines": {
    "node": "18 || 20 || 22"
  },
  "author": "Microsoft",
  "license": "MIT",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
    "dev": "func start --typescript --language-worker=\"--inspect=9239\" --port \"3978\" --cors \"*\"",
    "watch:teamsfx": "tsc --watch",
    "build": "tsc && shx cp -r ./src/adaptiveCards ./dist/src",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "npx func start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "dependencies": {
    "@azure/data-tables": "^13.2.2",
    "@azure/functions": "^4.6.0",
    "@azure/service-bus": "^7.9.0",
    "adaptivecards-templating": "^2.3.1",
    "adaptive-expressions": "^4.22.3",
    "@microsoft/teamsfx": "^3.0.0-alpha",
    "botbuilder": "^4.23.1",
    "durable-functions": "^3.1.0",
    "luxon": "^3.3.0"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/luxon": "^3.3.0",
    "axios": "^1.4.0",
    "env-cmd": "^10.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.4.0",
    "typescript": "^5.3.0"
  }
}
