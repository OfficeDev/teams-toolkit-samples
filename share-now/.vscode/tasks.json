{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pre Debug Check",
            "dependsOn": [
                "dependency check",
                "start ngrok",
                "prepare dev env"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Start Frontend",
            "dependsOn": [
                "teamsfx: frontend start",
                "teamsfx: auth start"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "Start Bot",
            "dependsOn": "teamsfx: bot start"
        },
        {
            "label": "dependency check",
            "type": "shell",
            "command": "exit ${command:fx-extension.validate-dependencies}"
        },
        {
            "label": "start ngrok",
            "type": "teamsfx",
            "command": "ngrok start",
            "isBackground": true,
            "dependsOn": [
                "bot npm install"
            ]
        },
        {
            "label": "prepare dev env",
            "dependsOn": [
                "prepare local environment",
                "backend npm install",
                "frontend npm install"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "bot npm install",
            "type": "shell",
            "command": "npm install --no-audit",
            "options": {
                "cwd": "${workspaceFolder}/bot"
            }
        },
        {
            "label": "prepare local environment",
            "type": "shell",
            "command": "exit ${command:fx-extension.pre-debug-check}"
        },
        {
            "label": "frontend npm install",
            "type": "shell",
            "command": "npm install --no-audit",
            "options": {
                "cwd": "${workspaceFolder}/tabs"
            }
        },
        {
            "label": "Start Backend",
            "dependsOn": [
                "teamsfx: backend watch",
                "teamsfx: backend start"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "backend npm install",
            "type": "shell",
            "command": "npm install --no-audit",
            "options": {
                "cwd": "${workspaceFolder}/api"
            },
            "presentation": {
                "reveal": "silent"
            },
            "dependsOn": "backend extensions install"
        },
        {
            "label": "backend extensions install",
            "type": "shell",
            "command": "exit ${command:fx-extension.backend-extensions-install}"
        }
    ]
}
